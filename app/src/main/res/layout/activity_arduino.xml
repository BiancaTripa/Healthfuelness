<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ArduinoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_back"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/login_edit_background"
                android:text="Back"></androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="Healthfuelness"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep up with your body and mind"
                    android:textColor="@color/black"
                    android:textStyle="italic"></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/button_message"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp">
            </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <Spinner
            android:id="@+id/spinner_paired_devices"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary">
        </Spinner>

        <Button
            android:id="@+id/button_find_paired_devices"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Find Devices"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/colorPrimaryDark">
        </Button>

        <Button
            android:id="@+id/button_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Connect"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/colorPrimaryDark">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_received_data"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Get Data"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"></Button>

        <TextView
            android:id="@+id/tv_connectivity_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text="You need to connect your device"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="64"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperature:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_temperature_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humidity:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_humidity_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UV Level:"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/tv_uv_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_uv_level_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="-----"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Quality Status:"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/tv_air_quality_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="-----"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toluen:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_toluene"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_toluene_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acetona:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_acetone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_acetone_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amoniac(NH3):"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_ammonia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ammonia_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alcool:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_alcohol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_alcohol_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hidrogen(H2):"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_hydrogen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hydrogen_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CO2:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_dioxide_carbon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="value"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="italic">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dioxide_carbon_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="-----"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_home_page"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/applogo"></ImageView>
    </LinearLayout>



</LinearLayout>