<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeMeasurementsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logout"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_edit_background"
            android:text="Log Out"></androidx.appcompat.widget.AppCompatButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="Healthfuelness"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep up with your body and mind"
                android:textColor="@color/black"
                android:textStyle="italic"></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/button_message"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_message"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_selectedDate"
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="Date"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:layout_gravity="left"
        android:text="Water intake:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_decrement"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>

        <TextView
            android:id="@+id/tv_water"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="Water"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/button_increment"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:text="Stress level:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic"></TextView>

        <TextView
            android:id="@+id/tv_stress_level"
            android:layout_width="361dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:text="12345"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_stress1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>

        <ImageView
            android:id="@+id/button_stress2"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>

        <ImageView
            android:id="@+id/button_stress3"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>

        <ImageView
            android:id="@+id/button_stress4"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>

        <ImageView
            android:id="@+id/button_stress5"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_logo">
        </ImageView>
    </LinearLayout>


    <TextView
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:layout_gravity="left"
        android:text="Sleep:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"></TextView>

    <TextView
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:layout_gravity="left"
        android:text="Weight:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"></TextView>

    <TextView
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:layout_gravity="left"
        android:text="Body measurements(cm):"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"></TextView>


    <ImageView
        android:id="@+id/button_home"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_logo">
    </ImageView>

</LinearLayout>